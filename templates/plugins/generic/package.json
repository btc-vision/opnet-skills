{
    "name": "my-opnet-plugin",
    "version": "1.0.0",
    "description": "Generic OPNet Node Plugin",
    "type": "module",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc && npm run compile",
        "compile": "bytenode -c dist/index.js",
        "watch": "tsc --watch",
        "lint": "eslint src --ext .ts",
        "format": "prettier --write src/**/*.ts"
    },
    "dependencies": {
        "@btc-vision/plugin-sdk": "latest"
    },
    "devDependencies": {
        "typescript": "^5.9.3",
        "bytenode": "^1.5.0",
        "eslint": "^9.39.2",
        "@typescript-eslint/eslint-plugin": "latest",
        "@typescript-eslint/parser": "latest",
        "prettier": "^3.8.0"
    }
}
